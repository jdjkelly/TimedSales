<!DOCTYPE html>
<html>
<head>
  <title>Timed Sales | Shopify Sales Made Easy</title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <script type="text/javascript" src="http://use.typekit.com/emx7vsy.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="container">
    <div id="header">
      <div class="row">
        <div class="six columns">
          <%= image_tag "logo.png", :class => "logo" %>
          <h1><%= link_to 'Timed Sales', '/' %></h1>
        </div>
      
      
        <div class="six columns">
          <p id="login-link">
            <% if current_shop %>
                <span class="note">Logged in as</span> <%= link_to current_shop.url, "https://#{current_shop.url}", :class => 'shop_name' %> <span class="note">|</span>
                <%= link_to 'logout', logout_path %>
            <% end %>
          </p>
        </div>
      </div>

    </div>
        
        <div class="row">
        <!-- Flash error & notice-->
        <% if flash[:error] %> <div id="flasherrors" class="alert-box warning"><%= flash[:error] %><a href="" class="close">×</a></div><% end %>
        <% if flash[:notice] %><div id="flashnotices"  class="alert-box"><%= flash[:notice] %><a href="" class="close">×</a></div><% end %>
        </div>
      
        <!-- begin div.main-->
        <div id="main" class="row">
          <%= yield %>
        </div>
        <!-- end div.main -->
      </div>
  </div>
</body>
</html>
